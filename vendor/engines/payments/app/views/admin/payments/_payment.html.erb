<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(payment) -%>">
  <span class='title'>
    <%= payment.status %>
    <span class="preview">&nbsp;</span>
  </span>
  <span class='actions'>
    <%= link_to refinery_icon_tag("application_go.png"), payment_path(payment),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    <%= link_to refinery_icon_tag("application_edit.png"), edit_admin_payment_path(payment),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), admin_payment_path(payment),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'shared.admin.delete', :title => payment.status),
        :method => :delete %>
  </span>
</li>
