<ul>
  <% if Admin::ReturnMethodsController.searchable? %>
    <li>
      <%= render :partial => "/shared/admin/search",
                  :locals => {
                    :url => admin_return_methods_path
                  } %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), new_admin_return_method_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? and Admin::ReturnMethodsController.sortable? and ReturnMethod.count > 1 %>
  <li>
    <%= link_to t('.reorder', :what => "Return Methods"),
                 admin_return_methods_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Return Methods"),
                 admin_return_methods_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>