<% content_for :body_content_title do %>
  <%= @project.case_name %>
<% end %>

<% content_for :body_content_left do %>
  <section>
    <h1>Case Name</h1>
    <p>
      <%=raw @project.case_name %>
    </p>
  </section>
  <section>
    <h1>Gist</h1>
    <p>
      <%=raw @project.gist %>
    </p>
  </section>
  <section>
    <h1>Case Introduce</h1>
    <p>
      <%=raw @project.case_introduce %>
    </p>
  </section>
  <section>
    <h1>Case Update</h1>
    <p>
      <%=raw @project.case_update %>
    </p>
  </section>
  <section>
    <h1>Case Small Photo</h1>
    <p>
      <%= image_fu @project.case_small_photo, nil %>
    </p>
  </section>
  <section>
    <h1>Case Promote Photo</h1>
    <p>
      <%= image_fu @project.case_promote_photo, nil %>
    </p>
  </section>
  <section>
    <h1>Wanted Money</h1>
    <p>
      <%=raw @project.wanted_money %>
    </p>
  </section>
  <section>
    <h1>Current Money</h1>
    <p>
      <%=raw @project.current_money %>
    </p>
  </section>
  <section>
    <h1>Return Methods</h1>
    <p>
      <%=raw @project.return_methods %>
    </p>
  </section>
  <section>
    <h1>Member</h1>
    <p>
      <%=raw @project.member_id %>
    </p>
  </section>
  <section>
    <h1>Class</h1>
    <p>
      <%=raw @project.class_id %>
    </p>
  </section>
<% end %>

<% content_for :body_content_right do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="projects">
      <% @projects.each do |project| %>
        <li>
          <%= link_to project.case_name, project_path(project) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render :partial => "/shared/content_page" %>
